<section class="float-left w-100 mt-5 Get-Weather">
  <div class="container">
    <div class="row">
      <h1 class="text-primary w-100 page-title mb-4">Weather Report</h1>
      <div class="card m-12">
        <div class="card-body">
          <div class="row">
              <p>
                <table class="table mt-3 table-bordered Air-Pollution">
                  <thead>
                    <tr>
                        <th scope="col"> City</th>
                        <th scope="col"> Temperature</th>
                        <th scope="col">Humidity</th>
                        <th scope="col">Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td> <%= @weather_report.city %> </td>
                      <td> <%= @weather_report.temperature %> K</td>
                      <td> <%= @weather_report.humidity %> </td>
                      <td> <%= @weather_report.description %> </td>
                    </tr>
                  </tbody>
                </table>
              </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
