<section class="float-left w-100 mt-5 Get-Weather">
  <div class="container">
    <div class="row">
      <h1 class="text-primary w-100 page-title mb-4">Current Air Pollution</h1>
      <%= form_with url: "/current_air_pollution", method: :get do |f| %>
        <div class="card">
          <div class="card-body">
            <div class="mb-3 row" style="align-items: end;">
              <div class="col-sm-4">
                <%= f.label :Latitude, { class: "form-label"} %>
                <%= f.text_field :lat, { class: "form-control", placeholder: "latitude" } %>
              </div> 
                <div class="col-sm-4">
                <%= f.label :Longitude, { class: "form-label"} %>
                <%= f.text_field :lon, { class: "form-control", placeholder: "longitude" } %>
              </div>
                <div class="col-sm-4">
                  <%= f.submit "Get Air pollution data", class: "btn btn-primary GetWeatherBTN" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <% if @air.present? %>
        <table class="table mt-3 table-bordered Air-Pollution">
          <thead>
            <tr>
              <% @air.keys.each do |key| %>
                <th scope="col"><%= key.upcase %></th>
              <%end%>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @air.keys.each do |key| %>
                <td> <%=@air[key] %> </td>
              <%end%>
            </tr>
          </tbody>
        </table>
      <% else %>
        <p class="text-center mt-2">No data available.</p>
      <% end %>
    </div>
  </div>
</section>
